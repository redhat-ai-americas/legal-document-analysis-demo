# Example environment configuration for legal-document-analysis
# Copy to .env and fill in required values

# --- Feature Flags ---
FORCE_GRANITE=true
USE_TUNED_MODEL=false
DUAL_MODEL_ENABLED=false
COMPARISON_ENABLED=false
RULES_MODE_ENABLED=false
RULES_TOP_K=8
USE_TEMPLATE_EXCEL=false
VALIDATE_HIGH_SEVERITY_ONLY=true

# --- Granite Instruct API (Required) ---
GRANITE_INSTRUCT_API_KEY=your_granite_api_key
GRANITE_INSTRUCT_URL=https://your-granite-endpoint
GRANITE_INSTRUCT_MODEL_NAME=granite-3.3-8b-instruct
# Versioned alternative (auto-detected)
# GRANITE_3_3_INSTRUCT_API_KEY=your_granite_api_key
# GRANITE_3_3_INSTRUCT_URL=https://your-granite-endpoint
# GRANITE_3_3_INSTRUCT_MODEL_NAME=granite-3.3-8b-instruct

# Optional Granite defaults
GRANITE_TEMPERATURE=0.1
GRANITE_MAX_TOKENS=512
GRANITE_RETRY_ATTEMPTS=5

# --- Mixtral API (Optional; used for validation) ---
MIXTRAL_API_KEY=your_mixtral_api_key
MIXTRAL_URL=https://your-mixtral-endpoint
MIXTRAL_MODEL_NAME=mistralai/Mixtral-8x7B-Instruct-v0.1

# --- Processing knobs ---
PARALLEL_PROCESSING=true
MAX_WORKERS=2
MODEL_TIMEOUT_SECONDS=120

# --- Paths (optional overrides) ---
# TERMINOLOGY_PATH=terminology/terms.yaml
QUESTIONNAIRE_PATH=questionnaires/contract_evaluation.yaml
# OUTPUT_DIR=data/output

# --- Streamlit ---
STREAMLIT_PORT=8501
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
